#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

# Query the GitHub API for the latest release
latest_release=$(curl "${curl_opts[@]}" "https://api.github.com/repos/lycheeverse/lychee/releases/latest" 2>/dev/null)

if [ -z "$latest_release" ]; then
	fail "Failed to fetch latest release information from GitHub API"
fi

# Extract version from tag_name field (format: "lychee-vX.Y.Z")
version=$(echo "$latest_release" | grep '"tag_name":' | sed -E 's/.*"lychee-v([^"]+)".*/\1/')

if [ -z "$version" ]; then
	fail "Could not determine latest stable version"
fi

echo "$version"
